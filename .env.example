# System Configuration
SYSTEM_NAME=MurmurNet
LOG_LEVEL=INFO
LOG_DIR=./logs

# Model Configuration
DEFAULT_MODEL_NAME=meta-llama/Llama-3.2-3B-Instruct
MODEL_CACHE_DIR=./models
MODEL_DEVICE=cuda
MODEL_QUANTIZATION=none

# Embedding Model
EMBEDDING_MODEL=intfloat/multilingual-e5-large
EMBEDDING_DEVICE=cuda
EMBEDDING_BATCH_SIZE=32

# Vector Database
VECTOR_DB_TYPE=faiss
VECTOR_DB_PATH=./data/vector_db
VECTOR_DB_DIMENSION=1024
VECTOR_DB_TOP_K=5

# Memory Database
MEMORY_DB_PATH=./data/memory_db
LONG_TERM_MEMORY_TOP_K=3
EXPERIENCE_MEMORY_TOP_K=3

# Knowledge Base
ZIM_FILE_PATH=./data/zim/wikipedia_ja.zim
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Blackboard Configuration
BLACKBOARD_MAX_ENTRIES=1000
BLACKBOARD_RETENTION_HOURS=24

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Agent Configuration
MAX_AGENT_RETRIES=3
AGENT_TIMEOUT_SECONDS=60
MAX_PARALLEL_AGENTS=3

# Evaluation Configuration
EVALUATION_OUTPUT_DIR=./evaluation/results
BENCHMARK_DATA_DIR=./evaluation/benchmarks
